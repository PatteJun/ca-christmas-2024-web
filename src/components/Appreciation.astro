---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="appreciation" id="appreciation">
  <div class="content">
    <div class="text-content">
      <h2>{t.appreciation.title}</h2>
      <p>{t.appreciation.description1}</p>
      <p>{t.appreciation.description2}</p>
    </div>
  </div>
  <div class="animation-container">
    <dotlottie-player 
      src="https://lottie.host/070ce607-0ad5-4852-9623-c23c2933e7c9/QRfGgZBrh9.lottie" 
      background="transparent" 
      speed="1" 
      loop 
      autoplay
    ></dotlottie-player>
  </div>
</section>
  
<style>
  .appreciation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
  }

  .content {
    background: var(--brand-red);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem;
  }

  .text-content {
    max-width: 600px;
  }

  .animation-container {
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .animation-container dotlottie-player {
    width: 400px;
    height: 400px;
  }

  h2 {
    color: white;
    font-size: 2.8rem;
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .appreciation {
      grid-template-columns: 1fr;
    }

    .content {
      padding: 2rem;
    }

    h2 {
      font-size: 2rem;
    }

    .animation-container dotlottie-player {
      width: 300px;
      height: 300px;
    }
  }
</style>