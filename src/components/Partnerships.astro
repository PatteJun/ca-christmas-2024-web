    }
  
    .icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }
  
    h3 {
      color: var(--text-color);
      font-size: 1.4rem;
      margin-bottom: 0.5rem;
      font-weight: 700;
    }
  
    .next-highlight {
      background: var(--brand-red);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 2rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
  
    .next-highlight:hover {
      transform: translateX(5px);
      background: #c01520;
    }
  
    .arrow {
      transition: transform 0.3s ease;
    }
  
    .next-highlight:hover .arrow {
      transform: translateX(3px);
    }
  
    @media (max-width: 768px) {
      .features {
        grid-template-columns: 1fr;
      }
  
      h2 {
        font-size: 2rem;
      }
  
      .handshake-animation {
        width: 200px;
        height: 200px;
